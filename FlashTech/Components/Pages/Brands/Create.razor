@page "/brands/create"
@rendermode InteractiveServer
@using FlashTech.Models
@using FlashTech.Service
@inject IBrandService BrandService
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus"></i> Thêm Thương Hiệu</h4>
                </div>
                <div class="card-body">
                    <EditForm Model="@brand" OnValidSubmit="SaveBrand">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label for="brandName" class="form-label fw-bold">Tên thương hiệu</label>
                            <InputText id="brandName" class="form-control" @bind-Value="brand.name" placeholder="Nhập tên thương hiệu" />
                            <ValidationMessage For="@(() => brand.name)" class="text-danger" />
                        </div>

                     
                        <div class="d-flex justify-content-between mt-4">
                            <a href="/brands" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>




@code {
   public FlashTech.Models.Brands brand = new FlashTech.Models.Brands();

    [Inject]
    private NavigationManager Navigation { get; set; }

    private async Task SaveBrand()
    {
        await BrandService.CreateBrandAsync(brand);
        // Redirect to the brands list page after saving
        Navigation.NavigateTo("/brands");
    }

    
}
