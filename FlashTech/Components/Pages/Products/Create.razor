@page "/products/create"
@using FlashTech.Service.Products
@rendermode InteractiveServer
@using FlashTech.Models
@using FlashTech.Service

@inject IProductService ProductService
@inject IBrandService BrandService
@inject NavigationManager Navigation

@inject IJSRuntime JSRuntime

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h3 class="text-2xl font-bold text-gray-800">Thêm sản phẩm mới</h3>
            <p class="text-gray-500 text-sm mt-1">Điền thông tin để thêm sản phẩm vào hệ thống</p>
        </div>
        <a href="/products" class="flex items-center gap-2 bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Quay lại
        </a>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <EditForm Model="@product" OnValidSubmit="SaveProduct">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-red-600 mb-4 p-4 bg-red-50 rounded-lg" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Tên sản phẩm -->
                <div class="md:col-span-2">
                    <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                        Tên sản phẩm <span class="text-red-500">*</span>
                    </label>
                    <InputText id="name" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                               @bind-Value="product.name" 
                               placeholder="Nhập tên sản phẩm" />
                    <ValidationMessage For="@(() => product.name)" class="text-red-600 text-sm mt-1" />
                </div>

                <!-- Thương hiệu -->
                <div>
                    <label for="brandId" class="block text-sm font-semibold text-gray-700 mb-2">
                        Thương hiệu <span class="text-red-500">*</span>
                    </label>
                    <InputSelect id="brandId" 
                                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                                 @bind-Value="product.brandId">
                        <option value="0">-- Chọn thương hiệu --</option>
                        @if (brands != null)
                        {
                            @foreach (var brand in brands)
                            {
                                <option value="@brand.Id">@brand.name</option>
                            }
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => product.brandId)" class="text-red-600 text-sm mt-1" />
                </div>

                <!-- Màu sắc -->
                <div>
                    <label for="color" class="block text-sm font-semibold text-gray-700 mb-2">
                        Màu sắc
                    </label>
                    <InputText id="color" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                               @bind-Value="product.color" 
                               placeholder="Nhập màu sắc" />
                </div>

                <!-- CPU -->
                <div>
                    <label for="CPU" class="block text-sm font-semibold text-gray-700 mb-2">
                        CPU
                    </label>
                    <InputText id="CPU" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                               @bind-Value="product.CPU" 
                               placeholder="Nhập thông tin CPU" />
                </div>

                <!-- RAM -->
                <div>
                    <label for="RAM" class="block text-sm font-semibold text-gray-700 mb-2">
                        RAM
                    </label>
                    <InputText id="RAM" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                               @bind-Value="product.RAM" 
                               placeholder="Nhập thông tin RAM" />
                </div>

                <!-- Storage -->
                <div>
                    <label for="storage" class="block text-sm font-semibold text-gray-700 mb-2">
                        Bộ nhớ
                    </label>
                    <InputText id="storage" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                               @bind-Value="product.storage" 
                               placeholder="Nhập thông tin bộ nhớ" />
                </div>

                <!-- GPU -->
                <div>
                    <label for="GPU" class="block text-sm font-semibold text-gray-700 mb-2">
                        GPU
                    </label>
                    <InputText id="GPU" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                               @bind-Value="product.GPU" 
                               placeholder="Nhập thông tin GPU" />
                </div>

                <!-- Giá bán -->
                <div>
                    <label for="price" class="block text-sm font-semibold text-gray-700 mb-2">
                        Giá bán <span class="text-red-500">*</span>
                    </label>
                    <InputNumber id="price" 
                                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                                 @bind-Value="product.price" 
                                 placeholder="Nhập giá bán" />
                    <ValidationMessage For="@(() => product.price)" class="text-red-600 text-sm mt-1" />
                </div>

                <!-- Giảm giá -->
                <div>
                    <label for="discount" class="block text-sm font-semibold text-gray-700 mb-2">
                        Giảm giá (%)
                    </label>
                    <InputNumber id="discount" 
                                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                                 @bind-Value="product.discount" 
                                 placeholder="Nhập phần trăm giảm giá" />
                </div>

                <!-- Giá khuyến mãi -->
                <div>
                    <label for="promotionalPrice" class="block text-sm font-semibold text-gray-700 mb-2">
                        Giá khuyến mãi
                    </label>
                    <InputNumber id="promotionalPrice" 
                                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                                 @bind-Value="product.promotionalPrice" 
                                 placeholder="Nhập giá khuyến mãi" />
                </div>

                <!-- Số lượng -->
                <div>
                    <label for="quantity" class="block text-sm font-semibold text-gray-700 mb-2">
                        Số lượng <span class="text-red-500">*</span>
                    </label>
                    <InputNumber id="quantity" 
                                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                                 @bind-Value="product.quantity" 
                                 placeholder="Nhập số lượng" />
                    <ValidationMessage For="@(() => product.quantity)" class="text-red-600 text-sm mt-1" />
                </div>

                <!-- Trạng thái -->
                <div>
                    <label for="status" class="block text-sm font-semibold text-gray-700 mb-2">
                        Trạng thái
                    </label>
                    <InputSelect id="status" 
                                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                                 @bind-Value="product.status">
                        <option value="">-- Chọn trạng thái --</option>
                        <option value="Còn hàng">Còn hàng</option>
                        <option value="Hết hàng">Hết hàng</option>
                        <option value="Sắp về">Sắp về</option>
                    </InputSelect>
                </div>

                <!-- Hình ảnh -->
                <div class="md:col-span-2">
                    <label for="image" class="block text-sm font-semibold text-gray-700 mb-2">
                        URL Hình ảnh
                    </label>
                    <InputText id="image" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" 
                               @bind-Value="product.image" 
                               placeholder="Nhập URL hình ảnh" />
                </div>
            </div>

            <!-- Buttons -->
            <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t border-gray-200">
                <a href="/products" class="px-6 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-all">
                    Hủy
                </a>
                <button type="submit" class="px-6 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg hover:from-indigo-700 hover:to-purple-700 transition-all shadow-lg hover:shadow-xl">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Lưu sản phẩm
                    </span>
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
   public FlashTech.Models.Products product = new FlashTech.Models.Products();
   public List<FlashTech.Models.Brands> brands = new List<FlashTech.Models.Brands>();
   protected override async Task OnInitializedAsync()
   {

        brands = await BrandService.GetAllBrandsAsync();
   }
   

   

   public async Task SaveProduct(){
        
        await ProductService.CreateProductAsync(product);
        await JSRuntime.InvokeVoidAsync("alert", "Thêm sản phẩm thành công!");
        Navigation.NavigateTo("/products");
   }
}
